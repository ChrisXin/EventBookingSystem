{% extends 'admin.html.twig' %}

{% block swiper %}
{% endblock %}

{% block body %}
<div id="wrapper">
	<div id="container">
	{{ form_start(form) }}

	<div class="form-group">
		{{ form_widget(form.code, { 'attr': { 'class': 'form-control', 'placeholder': 'Code' } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Name'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.mode, { 'attr': { 'class': 'form-control', 'placeholder': 'Mode'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.session, { 'attr': { 'class': 'form-control', 'placeholder': 'Session'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.teacher, { 'attr': { 'class': 'form-control', 'placeholder': 'Teacher'  } }) }}
	</div>

		{{ form_widget(form.time) }}

	<div class="form-group">
		{{ form_widget(form.place, { 'attr': { 'class': 'form-control', 'placeholder': 'Place'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.price, { 'attr': { 'class': 'form-control', 'placeholder': 'Price'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'placeholder': 'Description'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.status, { 'attr': { 'class': 'form-control', 'placeholder': 'Status'  } }) }}
	</div>
	<div class="form-group">
		{{ form_widget(form.save, { 'attr': { 'class': 'btn btn-default' } }) }}
	</div>

	{{ form_end(form) }}
	</div>
</div>
{% endblock %}
